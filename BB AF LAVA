-- LocalScript (place in StarterPlayerScripts or StarterGui)
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

-- Create the main UI
local PremiumUI = Instance.new("ScreenGui")
PremiumUI.Name = "PremiumTrialUI"
PremiumUI.ResetOnSpawn = false
PremiumUI.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main frame
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0, 400, 0, 250)  -- Reduced height since we removed a button
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)  -- Perfectly centered
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
MainFrame.BackgroundTransparency = 0.1
MainFrame.BorderSizePixel = 0
MainFrame.ClipsDescendants = true

-- Corner rounding
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = MainFrame

-- Drop shadow
local UIStroke = Instance.new("UIStroke")
UIStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
UIStroke.Color = Color3.fromRGB(60, 60, 80)
UIStroke.LineJoinMode = Enum.LineJoinMode.Round
UIStroke.Thickness = 2
UIStroke.Transparency = 0.7
UIStroke.Parent = MainFrame

-- Header
local Header = Instance.new("Frame")
Header.Name = "Header"
Header.Size = UDim2.new(1, 0, 0, 50)
Header.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
Header.BorderSizePixel = 0

local HeaderCorner = Instance.new("UICorner")
HeaderCorner.CornerRadius = UDim.new(0, 12)
HeaderCorner.Parent = Header

local HeaderLabel = Instance.new("TextLabel")
HeaderLabel.Name = "HeaderLabel"
HeaderLabel.Size = UDim2.new(1, -20, 1, 0)
HeaderLabel.Position = UDim2.new(0, 10, 0, 0)
HeaderLabel.BackgroundTransparency = 1
HeaderLabel.Text = "Trial Expired"
HeaderLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
HeaderLabel.TextSize = 24
HeaderLabel.Font = Enum.Font.GothamSemibold
HeaderLabel.TextXAlignment = Enum.TextXAlignment.Left

-- Icon (using system icon)
local Icon = Instance.new("ImageLabel")
Icon.Name = "Icon"
Icon.Size = UDim2.new(0, 24, 0, 24)
Icon.Position = UDim2.new(1, -34, 0.5, -12)
Icon.BackgroundTransparency = 1
Icon.Image = "rbxassetid://3926305904" -- Warning icon
Icon.ImageRectOffset = Vector2.new(324, 364)
Icon.ImageRectSize = Vector2.new(36, 36)
Icon.ImageColor3 = Color3.fromRGB(255, 85, 85)

-- Body content
local Body = Instance.new("Frame")
Body.Name = "Body"
Body.Size = UDim2.new(1, -40, 1, -110)  -- Adjusted height
Body.Position = UDim2.new(0, 20, 0, 70)
Body.BackgroundTransparency = 1

local Message = Instance.new("TextLabel")
Message.Name = "Message"
Message.Size = UDim2.new(1, 0, 0.6, 0)
Message.BackgroundTransparency = 1
Message.Text = "Your trial has ended.\nYou can reactivate it for 3 days by trading 500 Rap Points with me."
Message.TextColor3 = Color3.fromRGB(200, 200, 200)
Message.TextSize = 18
Message.Font = Enum.Font.Gotham
Message.TextWrapped = true
Message.TextYAlignment = Enum.TextYAlignment.Top

-- Points display
local PointsFrame = Instance.new("Frame")
PointsFrame.Name = "PointsFrame"
PointsFrame.Size = UDim2.new(1, 0, 0, 40)
PointsFrame.Position = UDim2.new(0, 0, 0.6, 10)
PointsFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
PointsFrame.BorderSizePixel = 0

local PointsCorner = Instance.new("UICorner")
PointsCorner.CornerRadius = UDim.new(0, 8)
PointsCorner.Parent = PointsFrame

local PointsIcon = Instance.new("ImageLabel")
PointsIcon.Name = "PointsIcon"
PointsIcon.Size = UDim2.new(0, 24, 0, 24)
PointsIcon.Position = UDim2.new(0, 10, 0.5, -12)
PointsIcon.BackgroundTransparency = 1
PointsIcon.Image = "rbxassetid://3926305904" -- Robux icon placeholder
PointsIcon.ImageRectOffset = Vector2.new(124, 204)
PointsIcon.ImageRectSize = Vector2.new(36, 36)
PointsIcon.ImageColor3 = Color3.fromRGB(255, 215, 0)

local PointsLabel = Instance.new("TextLabel")
PointsLabel.Name = "PointsLabel"
PointsLabel.Size = UDim2.new(1, -50, 1, 0)
PointsLabel.Position = UDim2.new(0, 50, 0, 0)
PointsLabel.BackgroundTransparency = 1
PointsLabel.Text = "500 Rap Points"
PointsLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
PointsLabel.TextSize = 18
PointsLabel.Font = Enum.Font.GothamSemibold
PointsLabel.TextXAlignment = Enum.TextXAlignment.Left

-- Single centered Close button
local CloseButton = Instance.new("TextButton")
CloseButton.Name = "CloseButton"
CloseButton.Size = UDim2.new(0.6, 0, 0, 40)  -- Wider and centered
CloseButton.Position = UDim2.new(0.2, 0, 1, -60)  -- Centered position
CloseButton.AnchorPoint = Vector2.new(0.5, 0.5)
CloseButton.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
CloseButton.AutoButtonColor = false
CloseButton.Text = "CLOSE"
CloseButton.TextColor3 = Color3.fromRGB(200, 200, 200)
CloseButton.TextSize = 18
CloseButton.Font = Enum.Font.GothamSemibold

local CloseCorner = Instance.new("UICorner")
CloseCorner.CornerRadius = UDim.new(0, 8)
CloseCorner.Parent = CloseButton

-- Button hover effects
CloseButton.MouseEnter:Connect(function()
    TweenService:Create(CloseButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(80, 80, 100)}):Play()
end)

CloseButton.MouseLeave:Connect(function()
    TweenService:Create(CloseButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(60, 60, 80)}):Play()
end)

-- Button functionality
CloseButton.MouseButton1Click:Connect(function()
    PremiumUI:Destroy()
end)

-- Assemble UI
HeaderLabel.Parent = Header
Icon.Parent = Header
Header.Parent = MainFrame
Message.Parent = Body
PointsIcon.Parent = PointsFrame
PointsLabel.Parent = PointsFrame
PointsFrame.Parent = Body
Body.Parent = MainFrame
CloseButton.Parent = MainFrame
MainFrame.Parent = PremiumUI

-- Animation when showing
MainFrame.Size = UDim2.new(0, 0, 0, 0)
MainFrame.Visible = true
TweenService:Create(MainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
    Size = UDim2.new(0, 400, 0, 250)
}):Play()

-- Add to player GUI
PremiumUI.Parent = gui
